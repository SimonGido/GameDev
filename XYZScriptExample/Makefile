  RESGEN = resgen
  TARGETDIR = ../XYZEditor/Assets/Scripts
  TARGET = $(TARGETDIR)/XYZScriptExample.dll
  OBJDIR = ../bin-int/Debug-linux-x86_64/XYZScriptExample
  FLAGS = /noconfig
  DEPENDS = ../XYZEditor/Assets/Scripts/XYZScriptCore.dll
  REFERENCES = /r:../XYZEditor/Assets/Scripts/XYZScriptCore.dll
  define PREBUILDCMDS
  endef
  define PRELINKCMDS
  endef
  define POSTBUILDCMDS
  endef
endif

ifeq ($(config),release)
  CSC = csc
  RESGEN = resgen
  TARGETDIR = ../XYZEditor/Assets/Scripts
  TARGET = $(TARGETDIR)/XYZScriptExample.dll
  OBJDIR = ../bin-int/Release-linux-x86_64/XYZScriptExample
  FLAGS = /noconfig
  DEPENDS = ../XYZEditor/Assets/Scripts/XYZScriptCore.dll
  REFERENCES = /r:../XYZEditor/Assets/Scripts/XYZScriptCore.dll
  define PREBUILDCMDS
  endef
  define PRELINKCMDS
  endef
  define POSTBUILDCMDS
  endef
